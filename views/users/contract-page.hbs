<div class="container-fluid">
  <div class="row p-5">
    <div class="col-md-6 p-5">
      <div class="card text-light" style="width: 100%;background-color: #15181e;;">
        {{#if reqexist}}
              <h1>Your are Already Requested Wait For our responce</h1>
        {{else}}
            <form class="p-5" action="/reqcontract?wktype=sm" method="post" enctype="multipart/form-data" id="usersignupform">
                <h1 class="text-center" style="font-weight: 800;"><b>Enter Shop Details</b>
                </h1>
                <div class="form-group">
                    <label for="exampleInputEmail1"><b>Shop Name</b></label>
                    <input name="sname" type="text" class="form-control" id="exampleInputEmail1"
                        aria-describedby="emailHelp" placeholder="Name">

                </div>
                <div class="form-group" >
                    <label for="exampleInputEmail1"><b>Shop Licence Number</b></label>
                    <input name="lno" type="number" class="form-control" id="ph"
                        aria-describedby="emailHelp" placeholder="LI.56ONXXXXXX0490" onchange="otpss()">
                    
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1"><b>Enter Shop Address With Picode</b></label>
                    <input name="address" type="text" class="form-control" id="exampleInputEmail1"
                        aria-describedby="emailHelp" placeholder="ABCD house,pathiyoorkala,keerikad P.O 6005XX"
                        style="height: 100px;">
                        

                </div>
                <div class="form-group" style="display: flex;
            justify-content: space-between;">
                    <label class="" for="exampleInputPassword1"><b>Choose Your District & Location</b></label>
                    <select id="district" name="district" style="width: 100%; height: 35px; border: 0; height: 60px;">
                        <option value="alappuzha">Alappuzha</option>
                        <option value="ernakulam">Ernakulam</option>
                        <option value="idukki">Idukki</option>
                        <option value="kannur">Kannur</option>
                        <option value="kasaragod">Kasaragod</option>
                        <option value="kollam">Kollam</option>
                        <option value="kottayam">Kottayam</option>
                        <option value="kozhikode">Kozhikode</option>
                        <option value="malappuram">Malappuram</option>
                        <option value="palakkad">Palakkad</option>
                        <option value="pathanamthitta">Pathanamthitta</option>
                        <option value="thiruvananthapuram">Thiruvananthapuram</option>
                        <option value="thrissur">Thrissur</option>
                        <option value="wayanad">Wayanad</option>
                    </select>
                     <button type="button" name="location" class="form-control ml-2" id="location"
                        aria-describedby="emailHelp" style="width: 35%;" onclick="getUserLocation()">Location</button>
                         <input name="late" type="text" style="display: none;" id="late">
                         <input name="long" type="text" style="display: none;" id="long">
                </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1"><b>Number Of Emploee You Want</b></label>
                    <input name="empno" type="number" class="form-control" id="exampleInputEmail1"
                        aria-describedby="emailHelp" placeholder="No.Of Employee">

                </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1"><b>Salary per Head</b></label>
                    <input name="salary" type="number" class="form-control" id="exampleInputEmail1"
                        aria-describedby="emailHelp" placeholder="salary">
                        

                </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1"><b>Working Time</b></label>
                    <div style="display: flex;
            justify-content: space-between;">
                        
                        <input name="stime" type="time" class="form-control" id="exampleInputEmail1"
                        aria-describedby="emailHelp" placeholder="Start" style="width: 40%;">
                         <label for="exampleInputEmail1"><b>To  </b></label>
                          <input name="entim" type="time" class="form-control" id="exampleInputEmail1"
                        aria-describedby="emailHelp" placeholder="End" style="width: 40%;">
                    </div>

                </div>
                 <div class="form-group">
                    <label for="exampleInputEmail1"><b>Contract Date</b></label>
                    <div style="display: flex;
            justify-content: space-between;">
                        
                        <input name="sdate" type="datetime-local" class="form-control" id="exampleInputEmail1"
                        aria-describedby="emailHelp" placeholder="Start" style="width: 40%;">
                         <label for="exampleInputEmail1"><b>To  </b></label>
                          <input name="edate" type="datetime-local" class="form-control" id="exampleInputEmail1"
                        aria-describedby="emailHelp" placeholder="End" style="width: 40%;">
                    </div>

                </div>
               
                <button type="submit" style="width: 100%; border-radius: 12px;" class="btn btn-dark mt-3">Submit</button>
            </form>
        {{/if}}
               
      </div>
    </div>
    {{!-- @@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@ --}}
    <div class="col-md-6  p-5">
      <div class="card text-light" style="width: 100%;background-color: #d73e17;;">
              
      </div>
    </div>
  </div>
</div>



<script>
    function getUserLocation() {
        
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(showPosition);
            } else {
                alert("Geolocation is not supported by this browser.");
            }
        }

        function showPosition(position) {
            console.log("Called")
            const latitude = position.coords.latitude;
            const longitude = position.coords.longitude;
            document.getElementById("late").value = ""+latitude
            document.getElementById("long").value = ""+longitude
            
            // You can use the obtained coordinates to open a map or perform navigation
            // For example, opening Google Maps
           // window.open(`https://www.google.com/maps?q=${latitude},${longitude}`, "_blank");
        }
        
</script>